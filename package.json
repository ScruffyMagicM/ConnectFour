  "description": "Introductory project to implement Connect Four",
  "main": "index.js",
  "scripts": {
    "build:all": "npm-run-all --parallel build:client build:api",
    "build:client": "cd ./client && npm run build",
    "build:api": "cd ./api && npm run build",
    "debug:client": "cd ./client && npm run start:debug",
    "dev": "npm-run-all --parallel dev:client dev:api",
    "dev:client": "cd ./client && npm run dev",
    "dev:api": "cd ./api && npm run start:dev",
    "debug:api": "cd ./api && npm run start:debug",
    "debug": "npm-run-all --parallel dev:client debug:api",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
